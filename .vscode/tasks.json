{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Client Tasks",
      "type": "npm",
      "script": "dev",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Tailwind CSS Watch",
      "type": "shell",
      "command": "npx",
      "args": [
        "tailwindcss",
        "-i",
        "./src/index.css",
        "-o",
        "./src/output.css",
        "--watch"
      ],
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    }
